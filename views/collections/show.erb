<h1><%= collection["name"] %></h1>

<ol>
  <% for site in collection.sites.sort_by { |site| site["alexa_rank"] || site.alexa_rank_from_cy || 10000000 } %>
    <li class="site" data-id="<%= site.id %>" data-alexa-rank="<%= site["alexa_rank"] %>" data-cy="<%= site[:cy] %>" data-alexa-rank-from-cy="<%= site.alexa_rank_from_cy %>"><a href="/sites/<%= site.id %>"><%= site["domain"].sub(/^www\./, "") %></a> <em><%= site["title"] %></em></li>
  <% end %>
</ol>
